# =============================================================================
# EZY Portal Deployment - Git Ignore
# =============================================================================

# Configuration files with secrets
portal.env
portal.secrets.env
*.secrets.env
*.env
!config/*.template
!scripts/certbot/*.env.example
!config/*.minimal
!config/*.full-infra
!config/*.external-infra

# SSL certificates and keys
nginx/ssl/*.crt
nginx/ssl/*.key
nginx/ssl/*.pem
!nginx/ssl/README.md
!nginx/ssl/generate-self-signed.sh

# Runtime data
data/
backups/

# Customer modules (generated at runtime)
customer-modules/installed.json
docker/docker-compose.module-customer-*.yml
nginx/conf.d/customer/*.conf
!nginx/conf.d/customer/.gitkeep

# Report Generator (runtime data, structure kept)
report-generator/reports/**
report-generator/output/**
report-generator/logs/**
!report-generator/**/
!report-generator/**/.gitkeep

# Logs and uploads (contents ignored, structure kept)
logs/**
uploads/**
!logs/**/
!uploads/**/
!logs/**/.gitkeep
!uploads/**/.gitkeep

# Docker volumes (if local)
volumes/

# Build artifacts and deployments
dist/frontend/
dist/mff/

# Deployment backups (created during updates)
dist/*.backup.*/
dist/**/*.backup.*/

# Temporary files
*.tmp
*.log
*.bak
install.log

# OS files
.DS_Store
Thumbs.db

# IDE files
.idea/
.vscode/
*.swp
*.swo
*~
.admin-access-enabled
.docker-compose.admin.generated.yml
